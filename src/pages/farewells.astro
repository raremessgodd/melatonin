---
// src/pages/farewells.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import Section from '../components/Section.astro';
import { farewellsSections } from '../data/farewellsSections.ts';
import { asset } from '../utils/assetPaths';
---

<BaseLayout
  title="Farewells — melatonin*"
  description="Farewells — альбом melatonin* о прощании со сном. Слушайте трек Till The End и смотрите живые концертные видео."
  pageKey="farewells"
  activePage="farewells"
  bgImage={asset('/assets/img/backgrounds/mi(1)_gr.jpg')}
  ogImage={asset('/assets/img/album/album_cover.jpg')}
  bodyClass="subpage"
>
  <main id="content">
    {farewellsSections.map((section) => <Section section={section} />)}
  </main>
</BaseLayout>

